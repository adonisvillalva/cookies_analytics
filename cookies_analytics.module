<?php
    function cookies_analytics_block_info(){
        $blocks['id-cookie'] = array(
             'info' => t('Cookie'),
        );
        return $blocks;
    }
    function cookies_analytics_block_view($delta = ''){
        $block = array();
        switch ($delta){
             case 'id-cookie':
                 $block['subject'] = t('Bienvenido/a');
                 $block['content'] = cookie();
                 break;
        }
        return $block;
    }
    function cookie(){
        $message = '<h2>Bienvenido</h2>';
        return $message;
    }
